    "min_lot_size": 1.0,
    "max_lot_size": 1.0,
    "initial_balance": 100000.0,
    "auto_execute_signals": true,
    "close_opposite_positions": true,
    "update_interval": 60,
    "quality_filter_enabled": true,
    "min_quality_grade": "B",
    "max_daily_trades": 3,
    "stop_loss": {
      "type": "atr_multiple",
      "value": 1.5
