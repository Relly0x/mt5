{
  "data": {
    "source": "oanda",
    "instruments": ["EUR_USD"],
    "timeframes": {
      "high": "M15",
      "low": "M1"
    },
    "history_period": "6Y",
    "storage_dir": "data/stored"
  },
  "model": {
    "hidden_size": 64,
    "dropout": 0.1,
    "attention_heads": 4,
    "lstm_layers": 2,
    "learning_rate": 0.001,
    "weight_decay": 0.01,
    "batch_size": 256,
    "num_epochs": 100,
    "early_stopping_patience": 10,
    "scheduler_patience": 5,
    "gradient_clip_val": 1.0,
    "past_sequence_length": 120,
    "forecast_horizon": 12,
    "quantiles": [0.1, 0.5, 0.9],
    "static_input_dim": 1,
    "past_input_dim": 50,
    "future_input_dim": 10,
    "l1_regularization": 0.0
  },
  "features": {
    "use_ta_features": true,
    "use_time_features": true,
    "use_volume_features": true
  },
  "preprocessing": {
    "normalization_method": "standard"
  },
  "strategy": {
    "type": "enhanced_tft",
    "trend_filter": true,
    "min_signal_strength": 0.75,
    "min_signal_gap_hours": 2,
    "require_trend_confirmation": true,
    "min_trend_strength": 0.65,
    "require_support_resistance": true,
    "require_fibonacci_confluence": true,
    "trend_only_trading": true,
    "no_counter_trend_trades": true,
